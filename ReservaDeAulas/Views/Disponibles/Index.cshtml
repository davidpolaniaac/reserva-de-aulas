@model IEnumerable<ReservaDeAulas.Models.Disponible>

@{
    ViewBag.Title = "Index";
}

<h2>Disponibles</h2>
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
<p>
    @Html.ActionLink("Crear nueva", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.Aula.NumAula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aula.Bloque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aula.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.Aula.NumAula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aula.Bloque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aula.Descripcion)
        </td>
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdDisponible }) |
            @Html.ActionLink("Details", "Details", new { id = item.IdDisponible }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IdDisponible })
       
        </td>
        }
        
        <td>
            
        @Html.ActionLink("Reservar", "Create","Reservas", new { id = item.IdDisponible }, new { @class = "btn btn-primary btn-large" })
        </td>
        
    </tr>
}

</table>
